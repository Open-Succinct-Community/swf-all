#!/bin/bash 
source ~/.bash_aliases
bindir=`dirname $PWD/$0`
cd ${bindir}/..

source src/main/resources/config/envvars

if [ "${swf_env}" = "" ] 
then 
  export swf_env="development"
fi

mvn clean -DskipTests=true package
if [ "$debug" = "" ] 
then
  export debug=y
fi
if [ "$suspend" = "" ] 
then
  export suspend=n
fi
if [ "$debug" = "y"  -o "$debug" = "Y" ] 
then 
    export DEBUG_OPTS="-agentlib:jdwp=transport=dt_socket,server=y,suspend=${suspend},address=${dport}"
fi

pid=`ps -ef |grep java.*PORT=${wport}|grep -v grep |tr -s ' ' |cut -f2 -d ' '`
if [ "$pid" != "" ]
then 
kill -9 $pid
sleep 5
fi

nohup java -ea:com.venky  -Xmx4g -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/media/heaps/java.hprof $DEBUG_OPTS -DPORT=${wport} -Dswf.env=${swf_env} -Dswf.pidfile=$PWD/tmp/pid -Dderby.locks.waitTimeout=10  -DSystem.out.close=true -DSystem.err.close=true -DSystem.in.close=true -cp overrideProperties/:target/classes/:target/dependency/* com.venky.swf.JettyServer &


pid=`ps -ef |grep java.*PORT=${wport}|grep -v grep |tr -s ' ' |cut -f2 -d ' '`
if [ "$pid" != "" ]
then 
  numtrys=0
  ret=-1 
  status=""
  while [ $ret -ne 0  -a $numtrys -lt 6 ] 
  do
    sleep 20;
    numtrys=`expr $numtrys + 1`
    curl  -s http://localhost:${wport}/ping -H 'ApiKey:9ab1a68e5092e42788b3926a81d7817c31c7cece' -H 'ApiProtocol: application/json'
    ret=$?
  done
  if [ "$ret" -ne 0 ] 
  then 
    echo "**Server Failed to Start** "
  else 
    echo "Server Started"
  fi
  exit $ret
fi
